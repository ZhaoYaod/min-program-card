.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: #f2f2f2;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}

.tab-bar-item image {
  width: 29px;
  height: 22px;
}

.tab-bar-item view {
  font-size: 12px;
}

.news{
  position: absolute;
  right: 25px;
  top: 3px;
  font-size: 10px;
  color: #fff;
  background-color: #ff0066;
  width: 16px;
  height: 16px;
  line-height: 16px;
  border-radius: 8px;
}

.none{display: none;}