page{
  background: #F2F2F2;
}
view{
  background: #fff;
}
.weui-flex {display: -webkit-box;display: -webkit-flex;display: flex;}
.weui-flex-2{display: -webkit-box;display: -webkit-flex;display: flex;flex-direction: column}
.weui-flexCen{justify-content: center}
.weui-flexVCen{align-items: center}
.margin_b_8{
  margin-bottom: 18.72rpx;
}
.charge_press{
  background: #f2f2f2;
}

.charge_h{
  padding: 28.08rpx 35.1rpx;
  height: 168.48rpx;
  box-sizing: border-box; 
  overflow: hidden;
}
/* .minheight{
  min-height: 28.08rpx;
} */
.charge_h>.charge_h_l{
  width: 112.32rpx;
  height: 112.32rpx;
  margin-right: 23.4rpx;
  flex-shrink: 0;
  border-radius: 4px;
}
.charge_h .charge_h_m{
  margin-right: 23.4rpx;
  width: 368rpx;
  flex-shrink: 0;
  flex-grow: 1;

}
.charge_h .charge_h_m>view>text{
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
  max-width: 100%;
}
.charge_h .charge_h_m>view:first-child{
  font-size: 32.76rpx;
}
.charge_h .charge_h_m>view:nth-child(2){
  font-size: 28.08rpx;
  color: #A1A1A1;
}
.charge_h .charge_h_boxBot>view{
  font-size: 23.4rpx;
  color: #BCBCBC;
  flex-grow: 1;
  margin-right: 32.76rpx;
}
.charge_h .charge_h_r,{
  flex-grow: 1;
  flex-shrink: 0;
  /* height: 100%; */
  font-size: 23.4rpx;
  justify-content: space-between;
  align-items: flex-end;
}
.charge_h .charge_h_r>text,.charge_h .charge_h_boxBot>text{
  border-radius: 9rpx;
  padding: 2rpx 10rpx;
  
}
.charge_h .charge_h_r>text:first-child{
  background: #F2F2F2;
}
.charge_h .charge_h_boxBot>text.meiyou{
  color:#BCBCBC;
  background:#E4E4E4;
  font-size: 23.4rpx;
  flex-shrink: 0;

}
.charge_h_box{
  flex-grow: 1;
}
.charge_h .charge_h_boxBot>text.you {
    background:#F22C2C;
    color: #fff;
    font-size: 23.4rpx;
    flex-shrink: 0;

}
.charge_h_r>text,.charge_h_boxBot text{
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
  max-width: 100%;
}
.charge_tit{
  font-size: 32.76rpx;
  padding: 32.76rpx 0;
}
.charge_tit>text{
  margin: 0 34rpx;
}
.charge_tit_line{
  width: 102rpx;
  height: 3rpx;
  background: #D7D7D7;
}
.charge_btn{
  padding: 26rpx 46rpx;
}
.charge_btn>button{
  background: #FF3385;
  width: 656rpx;
  height: 84rpx;
  line-height: 84rpx;
  color: #fff;
  font-size: 32.76rpx;
}
.search {
  height: 105.3rpx;
  border-bottom: 2.34rpx solid #F2F2F2;
  width: 100%;
  position: relative;
}

.search .check-type {
  width: 187.2rpx;
  height: 60.84rpx;
  position: absolute;
  right: 37.44rpx;
  top: 23.4rpx;
  color: #fff;
  font-size: 28.08rpx;
  background-color: #1081FF;
  line-height: 60.84rpx;
}

/* 加载中 */
.uploading {
  width: 72.54rpx;
  height: 72.54rpx;
  display: flex;
  margin: 39.78rpx auto 0;
}

/* 载入中 */
.loadRotate {
  animation: headRotate .8s linear infinite;
}

@keyframes headRotate {
  0% {
    transform: rotate(0)
  }

  50% {
    transform: rotate(180deg)
  }

  100% {
    transform: rotate(360deg)
  }
}

/* 没有产品 */
.noMoreProduct {
  color: #BCBCBC;
  font-size: 28.08rpx;
  display: block;
  text-align: center;
  margin: 39.78rpx auto 0;
}

/* 产品列表 */
.scroll-item {
  padding-bottom: 46.8rpx;
  min-height: 1155rpx;
}

.product-item {
  height: 187.2rpx;
  position: relative;
}

/* 选中效果 */
.product-item-selected {
  background: #F2F2F2;
}

/* 图片 */
.product-item-image {
  position: absolute;
  width: 140.4rpx;
  height: 140.4rpx;
  left: 39.78rpx;
  top: 25.74rpx;
  border-radius: 4px;
}

/* 标题 */
.product-item-title {
  position: absolute;
  font-size: 28.08rpx;
  color: #122F46;
  /* width:500.76rpx; */
  /* left:194.22rpx; */
  top: 23.4rpx;
  height: 79.56rpx;
  overflow: hidden;
}

/* 价格 */
.product-item-price {
  position: absolute;
  /* left:194.22rpx; */
  bottom: 32.76rpx;
  color: #FF0066;
}

.product-item-price-text {
  font-size: 28.08rpx;
}

/*  主体名称*/
.product-item-subName {
  position: absolute;
  right: 37.44rpx;
  bottom: 32.76rpx;
  font-size: 23.4rpx;
  color: #BCBCBC;
  background: #E4E4E4;
  border-radius: 4.68rpx;
  padding: 0 9.36rpx;
}

/* 点击弹出框 */
.product-item-box {
  width: 248.04rpx;
  height: 102.96rpx;
  border-radius: 4.68rpx;
  box-shadow: 0 0 11.7rpx #d2d2d2;
  position: absolute;
  left: 367.38rpx;
  top: 58.5rpx;
  background: #fff;
  z-index: 1;
}

.product-item-text {
  color: #474747;
  font-size: 32.76rpx;
  height: 98.28rpx;
  padding-top: 4.68rpx;
  display: block;
  /* margin-left: 21.06rpx; */
  margin-right: auto;
  box-sizing: border-box;
  text-align: left;
  text-decoration: none;
  line-height: 98.28rpx;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  background-color: #fff;
}

button::after {
  border: none;
}

.operatSelected {
  color: #1081FF !important;
}
/* .line{
  border-bottom: 1px solid #f2f2f2;
} */
.line::after{
  content: '';
  position: absolute;
  bottom: 0;
  width: 90%;
  height: 1px;
  background:#f2f2f2;
  transform: translateX(-50%);
  left: 50%;
}