/* pages/my_product/my_product.wxss */
/* 搜索 */
.search{
  height:105.3rpx;
  border-bottom:2.34rpx solid #F2F2F2;
  width: 100%;
  position: relative;
}
.no-more{
  display:flex;
  align-items: center;
  justify-content: center;
  height:100%;
  flex-direction: column;
  padding-top:88.92rpx;
}
.search .check-type{
  width:187.2rpx;
  height:60.84rpx;
  position:absolute;
  right:37.44rpx;
  top:23.4rpx;
  color:#fff;
  font-size:28.08rpx;
  background-color:#1081FF;
  line-height:60.84rpx;
}
.noMoreProduct-img {
  width: 140.4rpx;
  height: 140.4rpx;
}
/* 加载中 */
.uploading{
  width:72.54rpx;
  height:72.54rpx;
  display: flex;
  margin:39.78rpx auto 0;
}
/* 载入中 */
.loadRotate{
  animation: headRotate .8s linear infinite;
}
@keyframes headRotate{
  0%{transform: rotate(0)}
  50%{transform: rotate(180deg)}
  100%{transform: rotate(360deg)}
}
/* 没有产品 */
.noMoreProduct{
  color:#BCBCBC;
  font-size:28.08rpx;
  display: block;
  text-align: center;
  top: 432.9rpx;

}
/* 产品列表 */
.scroll-item{
  padding-bottom:46.8rpx;
  min-height:1155rpx;
}
.product-item{
  height:187.2rpx;
  position: relative;
  border-bottom:2.34rpx solid #f2f2f2;
  margin: 0 39.78rpx;
}
/* 选中效果 */
.product-item-selected{
  background:#F2F2F2;
}
/* 图片 */
.product-item-image{
  position: absolute;
  width:140.4rpx;
  height:140.4rpx;
  left:0;
  top:25.74rpx;
  border-radius:9.36rpx;
}
/* 标题 */
.product-item-title{
  position: absolute;
  font-size:28.08rpx;
  color:#122F46;
  /* width:500.76rpx; */
  /* left:194.22rpx; */
  top:23.4rpx;
  height:79.56rpx;
  overflow:hidden;
}
/* 价格 */
.product-item-price{
  position: absolute;
  /* left:194.22rpx; */
  bottom:32.76rpx;
  color:#FF0066;
}
.product-item-price-text{
  font-size:28.08rpx;
}
/*  主体名称*/
.product-item-subName{
  position: absolute;
  right:0;
  bottom:32.76rpx;
  font-size:23.4rpx;
  color:#BCBCBC;
  background:#E4E4E4;
  border-radius:4.68rpx;
  padding:0 9.36rpx;
  max-width:234rpx;
  
}
/* 点击弹出框 */
.product-item-box{
  width:243.36rpx;
  height:488.48rpx;
  border-radius: 4.68rpx;
  box-shadow: 0 0 11.7rpx #d2d2d2;
  position: absolute;
  left:367.38rpx;
  top:58.5rpx;
  background:#fff;
  z-index:1;
  border:2.34rpx solid #d2d2d2;
  overflow:hidden;
}
.product-item-text{
  color:#474747;
  font-size:32.76rpx;
  height:98.28rpx;
  padding-top:4.68rpx;
  display:block;
  margin-left:21.06rpx;
  margin-right:auto;
  box-sizing:border-box;
  text-align:left;
  text-decoration:none;
  line-height:98.28rpx;
  border-radius:5px;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  background-color:#fff;
}
button::after {
  border: none;
}
.operatSelected{
  color:#1081FF!important;
}
