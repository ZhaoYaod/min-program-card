/* 加载中 */
.uploading {
    width: 72.54rpx;
    height: 72.54rpx;
    display: flex;
    margin: 39.78rpx auto 0;
}

.btn-add-img-rotate {
    animation: headRotate .8s linear infinite;
}

/* 载入中 */
.loadRotate {
    animation: headRotate .8s linear infinite;
}

@keyframes headRotate {
    0% {
        transform: rotate(0)
    }

    50% {
        transform: rotate(180deg)
    }

    100% {
        transform: rotate(360deg)
    }
}

/* 没有产品 */
.noMoreProduct {
    color: #BCBCBC;
    font-size: 28.08rpx;
    display: block;
    text-align: center;
    margin: 39.78rpx auto 0;
}

